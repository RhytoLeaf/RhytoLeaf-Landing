{
  "manifest_version": 3,
  "name": "Zeek — RSVP Speed Reader",
  "version": "1.0.0",
  "description": "RSVP speed reader for dyslexia, ADHD & visual processing support. Select text on any page or paste to read at 200–900+ WPM.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "contextMenus",
    "storage",
    "sidePanel"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "read-selection": {
      "suggested_key": { "default": "Alt+Z" },
      "description": "Read selected text with Zeek"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/tesseract/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
